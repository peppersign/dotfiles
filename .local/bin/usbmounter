#!/bin/sh

# Original concept from LukeSmith
sticks=$(lsblk -lp | awk '/\dev\/sdb[0-9]/ {printf $1}')

# If no device detected
[[ "$sticks" = "" ]] && exit

# Select drive
sel=$(echo "$sticks" | dmenu -i -p "Mount stick:")

#Mount selected if selected != null
[[ "$sel" = "" ]] && exit
sudo mount "$sel" /mnt/usbstick && notify-send "Mounted $sel on /mnt/usbstick"
